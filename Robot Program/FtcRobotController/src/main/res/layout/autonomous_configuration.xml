<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Alliance Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delay"
        android:layout_alignTop="@+id/textView16"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginStart="14dp" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPosition"
        android:entries="@array/alliance_position_options"
        android:layout_below="@+id/textViewposition"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/spinnerPosition"
        android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/alliance_color_options"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true" />

    <TextView
        android:text="Alliance Position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewposition"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />
</RelativeLayout>